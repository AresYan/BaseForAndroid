<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/common_popup_list_RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/common_popup_list_TextView_cannel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d148"
        android:layout_marginBottom="@dimen/d1"
        android:layout_marginLeft="@dimen/d1"
        android:layout_marginRight="@dimen/d1"
        android:layout_marginTop="@dimen/d11"
        android:background="@drawable/common_popup_list_item_bg"
        android:gravity="center"
        android:text="@string/yz_base_cancel"
        android:textColor="@color/blue_01"
        android:textSize="@dimen/sp50" />
</LinearLayout>


